<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7FA"
        tools:context=".HomeActivity">


    <ImageView android:layout_width="match_parent"
               android:layout_height="311dp"
               android:background="@drawable/headerhome"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/imageView" app:layout_constraintHorizontal_bias="0.0"
        android:contentDescription="TODO" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="451dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

        <View android:layout_width="wrap_content"
              android:background="@drawable/dasarhome"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:id="@+id/view" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_height="437dp"
              app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/view"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" android:id="@+id/constraintLayout">

            <ImageView android:layout_width="60dp"
                       android:layout_height="60dp"
                       android:src="@drawable/profilhome" android:id="@+id/imageView2"
                       app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Nama"
                      android:textSize="9pt"
                      android:id="@+id/tx_nama"
                      android:layout_marginTop="4dp"
                      app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
                      android:layout_marginStart="16dp" android:layout_marginLeft="16dp"/>

            <TextView
                      android:id="@+id/tx_asuser"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Pasien"
                      android:textSize="6pt"
                      app:layout_constraintTop_toBottomOf="@+id/tx_nama"
                      app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginLeft="16dp"
                      android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                      app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="225dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/view" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical" app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout">

                <ImageButton
                    android:id="@+id/tb_promo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/promo" />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Promo"
                          android:textSize="5pt"
                          android:textColor="#454F63"
                          android:layout_gravity="center"
                          android:layout_marginVertical="0dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintStart_toEndOf="@+id/linearLayout" android:layout_marginLeft="32dp"
                          android:layout_marginStart="32dp" android:id="@+id/linearLayout2"
                          app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/tb_pemeriksaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ceklab" />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Pemeriksaan"
                          android:textSize="5pt"
                          android:textColor="#454F63"
                          android:layout_gravity="center"
                          android:layout_marginVertical="0dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="14dp"
                          app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                          app:layout_constraintStart_toStartOf="parent"
                          android:id="@+id/linearLayout3">

                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/tb_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/histori"/>

                    <TextView android:id="@+id/badge_notif"
                              android:visibility="invisible"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_alignParentRight="@id/tb_report"
                              android:background="@drawable/badge_notification"
                              android:text="1"
                              android:textSize="8pt"
                              android:textStyle="bold"
                              android:textColor="#FFF" android:layout_alignRight="@+id/tb_report"
                              android:layout_marginRight="2dp" android:layout_marginEnd="2dp"
                              android:layout_alignEnd="@+id/tb_report"/>

                </RelativeLayout>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Hasil Pemeriksaan"
                          android:textSize="5pt"
                          android:textColor="#454F63"
                          android:layout_gravity="center"
                          android:layout_marginVertical="0dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                          app:layout_constraintStart_toEndOf="@+id/linearLayout3" android:layout_marginTop="16dp"
                          android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
                          app:layout_constraintEnd_toEndOf="parent"
            >
                <ImageButton
                        android:id="@+id/tb_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/location"/>

                <TextView android:layout_width="91dp"
                          android:layout_height="wrap_content"
                          android:text="Lokasi Laboratorium Klinik"
                          android:textSize="5pt"
                          android:textColor="#454F63"
                          android:layout_gravity="center"
                          android:textAlignment="center"
                          android:layout_marginVertical="0dp"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_height="48dp"
              android:text="LaboratCall"
              android:textColor="#ffffff"
              android:textSize="35sp"
              android:textStyle="bold" android:layout_marginTop="144dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
              android:id="@+id/textView"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Melayani Anda Dimanapun dan Kapanpun"
              android:textColor="#ffffff"
              android:textSize="15sp"
              android:id="@+id/textView2"
              android:layout_marginStart="24dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="14dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toBottomOf="@+id/textView"
    />

</androidx.constraintlayout.widget.ConstraintLayout>