<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".HomeActivity">

    <LinearLayout
            android:layout_marginTop="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#58C171"
                    android:textStyle="bold"
                    android:text="PROFIL"/>

            <Button
                    android:background="@drawable/tb_edit_profil"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:textSize="12sp"
                    android:text="Edit"
                    android:layout_alignParentRight="true"
                    android:textColor="#58C171"
                    android:id="@+id/tb_edit_profil"/>

        </RelativeLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tx_nama_profil"/>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tx_jenkel_profil"/>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tx_tmp_lahir_profil"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tx_tgl_lahir_profil"/>

        </LinearLayout>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tx_alamat_profil"/>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tx_klinik_profil"/>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tx_no_wa_profil"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#58C171"
                    android:text="AKUN"/>

            <Button
                    android:background="@drawable/tb_edit_profil"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#58C171"
                    android:id="@+id/tb_edit_akun"/>

        </RelativeLayout>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tx_username_profil"/>

        <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/tx_pass_profil"/>

        <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#58C171"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="LaboratCall v1.0"/>

        <Button
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/tb_logout"
                android:layout_width="80dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#ADADAD"
                android:textAlignment="center"
                android:text="Logout"/>



    </LinearLayout>




    </LinearLayout>