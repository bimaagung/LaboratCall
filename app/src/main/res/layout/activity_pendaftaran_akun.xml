<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pendaftaran.PendaftaranAkun">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7FA">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            android:id="@+id/constraintLayout3">

        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:src="@drawable/ic_chevron_left_green_24dp" android:id="@+id/tb_back"
                     app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="10dp"
                     android:layout_marginStart="10dp"/>
        <TextView
                android:text="Akun Pasien"
                android:textStyle="bold"
                android:textColor="#58C171"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="194dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      app:layout_constraintTop_toTopOf="parent">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:text="No Hp / WA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText android:layout_width="320dp"
                          android:layout_height="45dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/tx_no_wa"
                          android:inputType="phone"
                          android:background="@drawable/inputprofil"
                          android:textSize="14sp"
                          android:paddingLeft="10dp"/>

                <TextView
                        android:text="Contoh : 08582378928"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#B6B6B6"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Klinik"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/rootContainerKlinik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </LinearLayout>


                <TextView
                        android:text="Username"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText android:layout_width="320dp"
                          android:layout_height="45dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/tx_username"
                          android:background="@drawable/inputprofil"
                          android:textSize="14sp"
                          android:paddingLeft="10dp"/>

                <TextView
                        android:text="Contoh : hardi123"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="3dp"
                        android:textColor="#B6B6B6"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Password"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText android:layout_width="320dp"
                          android:layout_height="45dp"
                          android:layout_marginTop="5dp"
                          android:inputType="textPassword"
                          android:id="@+id/tx_password"
                          android:background="@drawable/inputprofil"
                          android:textSize="14sp"
                          android:paddingLeft="10dp"/>


                <TextView
                        android:text="Ulangi Password"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText android:layout_width="320dp"
                          android:layout_height="45dp"
                          android:layout_marginTop="5dp"
                          android:id="@+id/tx_retype_password"
                          android:inputType="textPassword"
                          android:background="@drawable/inputprofil"
                          android:textSize="14sp"
                          android:paddingLeft="10dp"/>


                <Button android:layout_width="320dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/tb_simpan_pendaftaran"
                        android:text="Simpan"
                        android:textSize="8pt"
                        android:textColor="#FFFF"
                        android:background="@drawable/tbsimpanprofil"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>