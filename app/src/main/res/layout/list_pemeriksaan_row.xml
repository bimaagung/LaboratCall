<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
               >

    <ImageView
            android:id="@+id/icon_pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_check_green_24dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="12dp"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="HB"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:id="@+id/tx_item"
            android:layout_toEndOf="@+id/icon_pembayaran"
            android:layout_toRightOf="@+id/icon_pembayaran"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/tx_harga" android:layout_marginRight="9dp" android:layout_marginEnd="9dp"
            android:layout_toLeftOf="@+id/tx_harga"/>

    <TextView
            android:layout_width="140dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:text="Rp. 200.000"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:id="@+id/tx_harga"
            android:gravity="end"/>

</RelativeLayout>