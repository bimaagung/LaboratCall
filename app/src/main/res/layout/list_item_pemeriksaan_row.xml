<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="328dp"
            app:cardElevation="0dp"
            android:id="@+id/cv_list_item_pemeriksaan"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:paddingBottom="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp">
                <ImageView
                        android:background="@drawable/circle_green_list"
                        android:layout_width="45dp"
                        android:layout_height="45dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:id="@+id/imageView10">

                </ImageView>
                <ImageView
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_assignment_green_24dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView10"
                        app:layout_constraintStart_toEndOf="@+id/imageView10"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tx_list_jenis_pemeriksaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3CD544"
                        android:layout_gravity="center_vertical"
                        android:text="Hematologi"
                        android:textSize="14sp"/>
                <TextView
                        android:id="@+id/tx_list_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3CD544"
                        android:layout_gravity="center_vertical"
                        android:text="( Hemoglobin) "
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="3dp"
                        android:textSize="10sp"/>

            </LinearLayout>

                <TextView
                        android:id="@+id/tx_list_item_pemeriksaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hemoglobin"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>