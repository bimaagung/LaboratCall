<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenungguHasil">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/iconmenunggu" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp" android:layout_marginTop="125dp"
               app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView4"
    />

    <LinearLayout android:layout_width="321dp"
                  android:layout_height="98dp"
                  android:orientation="vertical" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                  android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                  android:layout_marginTop="48dp" android:id="@+id/linearLayout5" android:layout_marginBottom="40dp"
                  app:layout_constraintBottom_toTopOf="@+id/tb_selesain">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Menunggu Hasil"
                  android:id="@+id/text_label_menunggu_hasil"
                  android:textStyle="bold"
                  android:textAlignment="center"
                  android:textSize="20sp"/>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/text_menuggu_hasil"
                  android:layout_height="72dp"
                  android:text="Silahkan melakukan pembayaran dan tunggu sampai hasil pemeriksaan keluar. Untuk melihat hasil pemeriksaan silahkan pilih menu hasil pemeriksaan di menu utama"
                  android:textAlignment="center"
                  android:textSize="14sp"/>
    </LinearLayout>

    <Button
            android:background="@drawable/tblogin"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Selesai"
            android:textColor="#ffff"
            android:textSize="14sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" android:layout_marginTop="8dp"
            android:layout_marginBottom="222dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tb_selesain"/>

</androidx.constraintlayout.widget.ConstraintLayout>